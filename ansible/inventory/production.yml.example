---
# Example production inventory
# Copy this file to production.yml and fill in your values

all:
  hosts:
    production:
      ansible_ssh_host: your-domain.app
      ansible_ssh_user: deploy
      ansible_ssh_private_key_file: ~/.ssh/id_rsa

  vars:
    domain_api: api.your-domain.app
    domain_storage: storage.your-domain.app
    admin_email: admin@your-domain.com

    project_name: your-cool-app
    project_path: "/var/www/{{ project_name }}"

    docker_packages:
      - docker-ce
      - docker-ce-cli
      - containerd.io
      - docker-compose-plugin

    certbot-packages:
      - certbot
      - python3-certbot-nginx

    nginx_sites_available: /etc/nginx/sites-available
    nginx_sites_enabled: /etc/nginx/sites-enabled
    nginx_conf_d: /etc/nginx/conf.d

    ssl_cert_path: /etc/letsencrypt/live