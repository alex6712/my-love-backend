server {
    server_name {{ domain_api }};

    client_max_body_size 200M;

    gzip on;
    gzip_min_length 1024;
    gzip_comp_level 5;
    gzip_types application/json application/xml text/plain text/css text/javascript application/javascript;
    gzip_proxied any;
    gzip_vary on;

    real_ip_header X-Forwarded-For;
    set_real_ip_from 127.0.0.1;
    set_real_ip_from 172.16.0.0/12;

    location / {
        proxy_pass http://localhost:8000;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    listen 443 ssl http2;
    ssl_certificate {{ ssl_cert_path }}/{{ domain_api }}/fullchain.pem;
    ssl_certificate_key {{ ssl_cert_path }}/{{ domain_api }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}

server {
    if ($host = {{ domain_api }}) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name {{ domain_api }};
    return 404;
}
